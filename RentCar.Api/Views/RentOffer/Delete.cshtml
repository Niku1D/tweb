@model RentCar.Api.Models.RentOffer

@{
    ViewBag.Title = "Delete Rent Offer";
}

<h2>Delete Rent Offer</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="dl-horizontal">
        <dt>Car Name</dt>
        <dd>@Model.CarName</dd>
        <dt>Car Year</dt>
        <dd>@Model.CarYear</dd>
        <dt>Fuel Type</dt>
        <dd>@Model.FuelType</dd>
        <dt>Gear Box Type</dt>
        <dd>@Model.GearBoxType</dd>
        <dt>Horsepower</dt>
        <dd>@Model.Horsepower</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div>
        <button type="submit" class="btn btn-danger">Delete</button> | 
        @Html.ActionLink("Back to List", "Index")
    </div>
}